<div class="card-place">

  <%= image_tag place.url_image, alt: "place's image" %>
  <div class=card-info>
    <div class="place-data">
      <h2><%= place.name %></h2>
      <p class="address" style="font-style: italic;"><%= place.address %></p>
      <p>
        <% place.average_rating.to_i.times do  %>
          <span class="fa-solid fa-star" style="color: #3698B1"></span>
        <% end %>
      </p>
      <%= link_to "VisitÃ©", place_user_places_path(place), data: { turbo_method: :post } %>
    </div>
    <div class="card-description">
      <%= place.description %>
    </div>
  </div>
</div>
